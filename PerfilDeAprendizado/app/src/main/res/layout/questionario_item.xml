<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tituloquestionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="14dp"
        android:text="CAMEA40"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagestatuscinza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="-50dp"
            android:paddingEnd="-50dp"
            android:visibility="gone"
            app:srcCompat="@android:drawable/presence_invisible" />

        <ImageView
            android:id="@+id/imagestatusverde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingStart="-50dp"
            android:paddingEnd="-50dp"
            app:srcCompat="@android:drawable/presence_online" />

        <TextView
            android:id="@+id/statusquestionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Respondido em 20/01/2020" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/verresultado"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundedbutton"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:text="Ver Resultado"
            android:textColor="@color/background"
            android:textSize="12sp" />

        <Button
            android:id="@+id/respnovamente"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/roundedbuttonsecondary"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:text="Responder Novamente"
            android:textColor="@color/background"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
