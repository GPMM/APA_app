<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/item_estilo_predominante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginBottom="4dp"
        android:text="Ativo"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:text="Características deste estilo:"
        android:textSize="14dp"
         />

    <TextView
        android:id="@+id/caracteristicas_estilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:text="Características estilo Características estilo Características estilo Características estilo Características estilo Características estilo Características estilo Características estilo Características estilo "
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginBottom="14dp"
        />

    <TextView
        android:id="@+id/como_melhorar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:text="Como posso melhorar meus estudos?"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/sugestoes_estilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:text="Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo Sugestão estilo "
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginBottom="14dp"
        />

</LinearLayout>
